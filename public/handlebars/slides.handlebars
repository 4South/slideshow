<section id = "splashpage">
<span id = "subtitle"> Slideshow: {{controller.content.title}} 
  Slides: {{controllers.slides.content.length}} {{controller}}    

</span>
{{#each slide in controllers.slides.arrangedContent}}
  <div class = "slide">
    {{#view contentBinding = "slide"}}
      {{partial presentationslide}}
    {{/view}}
  </div>
  
{{else}}
  
  <div class="lead">No Slides</div>

{{/each}}
</section>