<section id = 'splashpage'>

      <h3> Welcome {{controller.controllers.user.content.username}} </h3>
      <h5> Choose a Slideshow </h5>
        <div class = "row-fluid" id = "slideshowlist">
          {{#each show in controller.content}}
            <div class = "span2">
            {{#linkTo slideshow show}}
              <section id = "showthumbnails">
                Title: <br> {{show.title}} <br>
                Author: <br> {{show.author}}
              </section>  
            {{/linkTo}}
            </div>    
          {{/each}}
        </div>
      <hr>
           {{partial slideshowcreate}}
 
</section>