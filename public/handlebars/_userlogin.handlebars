<section id = "userlogin">
  <form id = "userlogin">
    <fieldset>
      <legend class = "formlabel"> Login </legend>
      <label id = "subtitle"> User Name: </label>
      {{view App.SlideTextField
              valueBinding = "controllers.user.loginUser"}}
      
      <label id = "subtitle"> Password: </label>
      {{view App.SlideTextField 
              type = "password"
              valueBinding = "controllers.user.loginPassword"}}
    <br>
    <button class = "btn-small btn-warning"
                  {{action login 
                    target = "controllers.user"}}
    >Login</button>
    
    </fieldset>
  </form>
</section> 